{
    "tool_name": "save_chat_history_DB",
    "description": "Lưu lịch sử chat vào MongoDB.",
    "input_schema": {
        "type": "object",
        "properties": {
            "response": {
                "type": "array",
                "description": "Lịch sử chat",
                "items": {
                    "type": "object",
                    "description": "Câu trả lời của AI",
                    "properties": {
                        "Date": {
                            "type": "string",
                            "description": "Ngày báo cáo"
                        },
                        "Completed": {
                            "type": "string",
                            "description": "Số lượng công việc đã hoàn thành"
                        },
                        "Inprogress": {
                            "type": "string",
                            "description": "Số lượng công việc đang thực hiện"
                        },
                        "Block": {
                            "type": "string",
                            "description":"Công việc đang tồn đọng"
                        }
                    }
                }
            },
            "timestamp": {
                "type": "datetime",
                "description": "Thời gian lưu lịch sử"
            },
            "conversation": {
                "type": "string",
                "description": "Ngữ cảnh của cuộc trò chuyện"
            },
            "user_input":{
                "type": "string",
                "description": "Yêu cầu từ người dùng"
            }
        },
        "required": ["response","conversation","user_input"]
    },
    "output_schema": {
        "type": "object",
        "properties": {
            "status": {"type": "string"},
            "document_id": {"type": "string"},
            "message": {"type": "string"}
        },
        "required": ["status"]
  },
    "endpoint_url": "/tools/save_chat_history_DB"
}