# ==========================================
# deployment/.env.prod - Production Environment
# ==========================================

# REQUIRED: External MongoDB Atlas
MONGODB_URI=
MONGODB_DB_NAME=agent_reports
MONGODB_COLLECTION_NAME=chat_history

# REQUIRED: Slack Integration
SLACK_BOT_TOKEN=xoxb-your-production-slack-bot-token
SLACK_USER_ID=U1234567890
SLACK_CHANNEL_ID=

# REQUIRED: API Keys
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# REQUIRED: Google Sheets URL
DEFAULT_SHEET_URL=
# Optional: Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Ho_Chi_Minh
SCHEDULER_CHECK_TIMES=10:00,12:00,15:00
SCHEDULER_MAX_REMINDERS=3

# Optional: Application Configuration
DEBUG=false
LOG_LEVEL=INFO
