[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    env,
    venv,
    .pytest_cache,
    .coverage,
    htmlcov,
    build,
    dist,
    *.egg-info

ignore =
    E203,
    E501,
    W503,
    F401

per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
